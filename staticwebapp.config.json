{
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/assets/*",
            "/*.css",
            "/*.js",
            "/*.png",
            "/*.jpg",
            "/*.svg",
            "/*.ico",
            "/*.json",
            "/api/*"
        ]
    },
    "routes": [
        {
            "route": "/assets/*",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "route": "/api/*",
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/*",
            "headers": {
                "cache-control": "no-cache"
            }
        }
    ],
    "responseOverrides": {
        "404": {
            "rewrite": "/index.html",
            "statusCode": 200
        }
    },
    "mimeTypes": {
        ".json": "application/json",
        ".js": "text/javascript",
        ".css": "text/css"
    },
    "globalHeaders": {
        "content-security-policy": "default-src 'self' https: data: blob:; connect-src 'self' https: wss: ws:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https: blob:; font-src 'self' data: https:; media-src 'self' https: blob:; object-src 'none'"
    }
}